@model WikiVerde.Models.Login
@{
    Layout = null;
}
@{ ViewBag.Title = "Criar Usuário";}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Wiki Verde</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/images/icons/favicon.ico" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <div class="alert-info">
        <h2 class="h2 text-center">@ViewBag.Title</h2>
    </div>

    <form asp-controller="Login" asp-action="Add" method="post" role="form">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-row">
            <div class="form-group col-md-5 offset-md-1">
                <label for="inputEmail">@Html.DisplayNameFor(model => model.Email)</label>
                <input type="email" asp-for="Email" class="form-control" id="inputEmail" placeholder="@Html.DisplayNameFor(model => model.Email)">
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <label for="inputPassword">@Html.DisplayNameFor(model => model.Senha)</label>
                <input type="password" asp-for="Senha" class="form-control" id="inputPassword" placeholder="@Html.DisplayNameFor(model => model.Senha)">
                @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-5 offset-md-1">
                <label for="inputName">@Html.DisplayNameFor(model => model.Name)</label>
                <input type="text" asp-for="Name" class="form-control" id="inputName" placeholder="@Html.DisplayNameFor(model => model.Name)">
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <label for="inputCPF">@Html.DisplayNameFor(model => model.Cpf)</label>
                <input type="text" asp-for="Cpf" class="form-control" id="inputCPF" placeholder="@Html.DisplayNameFor(model => model.Cpf)">
                @Html.ValidationMessageFor(model => model.Cpf, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-5 offset-md-1">
                <label for="inputRG">@Html.DisplayNameFor(model => model.RG)</label>
                <input type="text" asp-for="RG" class="form-control" id="inputRG" placeholder="@Html.DisplayNameFor(model => model.RG)">
                @Html.ValidationMessageFor(model => model.RG, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <label for="inputDate">@Html.DisplayNameFor(model => model.DataNascimento)</label>
                <input type="date" asp-for="DataNascimento" class="form-control" id="inputDate" placeholder="@Html.DisplayNameFor(model => model.DataNascimento)">
                @Html.ValidationMessageFor(model => model.DataNascimento, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-5 offset-md-1">
                <label for="inputTel">@Html.DisplayNameFor(model => model.Telefone)</label>
                <input type="tel" asp-for="Telefone" class="form-control" id="inputTel" placeholder="@Html.DisplayNameFor(model => model.Telefone)">
                @Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-5">
                <label for="inputAddress">@Html.DisplayNameFor(model => model.Address)</label>
                <input type="text" asp-for="Address" class="form-control" id="inputAddress" placeholder="@Html.DisplayNameFor(model => model.Address)">
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-5 offset-md-1">
                <button type="submit" class="btn btn-primary text-center">Criar Usuário</button>
            </div>
        </div>

    </form>
</body>
</html>


