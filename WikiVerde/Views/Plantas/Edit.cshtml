@model WikiVerde.Models.Planta
@{ ViewBag.Title = "Editar Planta";}
<h2>@ViewBag.Title</h2>
<form asp-controller="Plantas" asp-action="Edit" method="post" class="form-horizontal" role="form">
    <div class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Id" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Id" class="form-control" readonly="readonly" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NomeCientifico" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NomeCientifico" class="form-control" />
                <span asp-validation-for="NomeCientifico" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DscEspecie" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DscEspecie" class="form-control" />
                <span asp-validation-for="DscEspecie" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DscManejo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DscManejo" class="form-control" />
                <span asp-validation-for="DscManejo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Atualizar" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>