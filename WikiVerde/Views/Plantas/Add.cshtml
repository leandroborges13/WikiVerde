@model WikiVerde.Models.Planta
@{ ViewBag.Title = "Adicionar Plantas";}
<div class="input-group mb-3">
    <h2 class="h2">@ViewBag.Title</h2>
</div>
<form asp-controller="Plantas" asp-action="Add" method="post" class="form-horizontal" role="form">
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">@Html.DisplayNameFor(model => model.NomeCientifico)</span>
        </div>
        <input type="text" asp-for="NomeCientifico" class="form-control" placeholder="@Html.DisplayNameFor(model => model.NomeCientifico)" aria-label="@Html.DisplayNameFor(model => model.NomeCientifico)" aria-describedby="basic-addon1">
    </div>

    <div class="input-group mb-3">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">@Html.LabelFor(model => model.DscEspecie)</span>
            </div>
            <textarea asp-for="DscEspecie" class="form-control" aria-label="With textarea"></textarea>
        </div>
    </div>
    <div class="input-group mb-3">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">@Html.LabelFor(model => model.DscManejo)</span>
            </div>
            <textarea asp-for="DscManejo" class="form-control" aria-label="With textarea"></textarea>
        </div>
    </div>
    <div class="form-input-group mb-3">
        <div class="input-group">
            <input type="submit" value="Incluir" class="btn btn-success" />
        </div>
    </div>

</form>
